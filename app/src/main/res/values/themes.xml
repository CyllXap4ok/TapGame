<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TapGame" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
    </style>

    <style name="Theme.TapGame" parent="Base.Theme.TapGame" />

    <style name="game_button_style" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_ring</item>
        <item name="android:foreground">@drawable/button</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:foregroundTintMode">multiply</item>

    </style>

</resources>